<Window x:Class="LEDRings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LEDRings"
        mc:Ignorable="d"
        Title="MUWPFA" Width="400">
        <TabControl>
            <TabItem Header="Stock P/A">
                <StackPanel Margin="5 5 5 5">
                    <Label Content="Profibility" Margin="5 5 5 5"/>
                <Slider Margin="5 5 5 5" ValueChanged="ProfibilitySlider_ValueChanged" Minimum="0" Maximum="100" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPrecision="0" AutoToolTipPlacement="TopLeft" />
                    <Label Content="Available Amount" Margin="5 5 5 5"/>
                <Slider Margin="5 5 5 5" ValueChanged="AvailableAmountSlider_ValueChanged" Minimum="0" Maximum="100" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPrecision="0" AutoToolTipPlacement="TopLeft"/>
                    <Button Content="Save" Margin="5 5 5 5" Click="SaveButton_Click"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="TabItem" />
    </TabControl>
</Window>
